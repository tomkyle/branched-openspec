{
  "name": "branched-openspec",
  "license": "Apache-2.0",
  "devDependencies": {
    "@iarna/toml": "^2.2.5",
    "chokidar-cli": "^3.0.0",
    "glob": "^11.0.0",
    "js-yaml": "^4.1.0",
    "markdownlint-cli": "^0.43.0",
    "npm-run-all": "^4.1.5"
  },
  "scripts": {
    "watch": "npm-run-all -p watch:*",
    "watch:src": "chokidar \"src/**/*.yaml\" -c \"npm run build\"",
    "watch:toml": "chokidar \"commands/**/*.toml\" -c \"npm run lint:toml\"",
    "watch:md": "chokidar \"prompts/*.md\" -c \"npm run lint:md\"",

		"build": "scripts/build.js",

		"lint": "npm-run-all -s lint:*",
		"lint:md": "markdownlint prompts/*.md",
    "lint:toml": "node scripts/validate-toml.js"
  }
}
