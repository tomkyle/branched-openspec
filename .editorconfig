# .editorconfig

# ------------------------------------------------------------------------
#
# Defines basic coding styles.
# See EditorConfig homepage <http://editorconfig.org/>
#
# ------------------------------------------------------------------------

# editorconfig.org
root = false


[*.json]
indent_style = tab
indent_size = 2

[*.toml]
indent_style = tab
indent_size = 2

[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.yaml]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

